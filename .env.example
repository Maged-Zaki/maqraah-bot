DISCORD_TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here # Server ID where the bot will operate
CHANNEL_ID=your_channel_id_here # Channel ID for daily reminders
DATABASE_PATH=./maqraah.db # Path to the SQLite database file

# New Relic Configuration
NEW_RELIC_APP_NAME=Maqraah Bot # Application name displayed in New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here # Your New Relic license key
NEW_RELIC_ENABLED=true # Enable/disable New Relic monitoring
NEW_RELIC_LOG_LEVEL=info # Log level: trace, debug, info, warn, error, fatal
NEW_RELIC_LOG_FILEPATH=stdout # Log file path or 'stdout' for console