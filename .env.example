DISCORD_TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here # Server ID where the bot will operate
CHANNEL_ID=your_channel_id_here # Channel ID for daily reminders
DATABASE_PATH=./maqraah.db # Path to the SQLite database file

# ============================================
# New Relic Configuration
# ============================================
# Required: Your New Relic account license key
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# Optional: Application name displayed in New Relic (defaults to 'maqraah-bot')
NEW_RELIC_APP_NAME=Maqraah Bot

# Optional: Enable/disable New Relic monitoring (defaults to true)
NEW_RELIC_ENABLED=true

# Optional: Agent log level: trace, debug, info, warn, error, fatal
NEW_RELIC_LOG_LEVEL=info

# Optional: Agent log file path (defaults to 'stdout')
NEW_RELIC_LOG_FILEPATH=stdout

# Optional: Custom host for New Relic collector (rarely needed)
# NEW_RELIC_HOST=collector.newrelic.com

# Optional: Proxy settings if needed
# NEW_RELIC_PROXY_HOST=
# NEW_RELIC_PROXY_PORT=